@model Product

<!DOCTYPE html>

<html>
<head>
    <title>@Model View Product</title>
</head>
<body>
<div>
    <h3>@Model.Name Information</h3>
    <table>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Category ID</th>
            <th>On Sale</th>
            <th>Stock Level</th>
        </tr>
        <tr>
            <td>@Model.ProductID</td>
            <td>@Model.Name</td>
            <td>@Model.Price</td>
            <td>@Model.CategoryID</td>
            <td>@Model.OnSale</td>
            <td>@Model.StockLevel</td>
        </tr>
    </table>
</div>
</body>
</html>